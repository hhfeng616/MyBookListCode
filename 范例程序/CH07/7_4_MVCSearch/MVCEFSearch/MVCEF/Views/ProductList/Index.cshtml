@model IEnumerable<MVCEF.Models.Product>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        table{border-collapse:collapse;}
        th,td{border:1px solid silver;}

    </style>
</head>
<body>
    <div style="margin:0px auto;width:86%;">
        @using (Html.BeginForm())
        {
            <p>
                <span>商品名称：</span>@Html.TextBox("Name")
                <input type="submit" value="查询" class="editButton">
            </p>
        }
        <table  style="width:96%;" >
            <tr>
                <th>Id</th>
                <th>Name</th>                
                <th>Price</th>      
                <th>Category</th>               
            </tr>
            @if (Model != null)
            {
                if (Model.Count() > 0)
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td style="width:60%;">@product.Name</td>                           
                            <td>@product.Price</td>
                            <td>@product.Category</td>
                        </tr>
                    }
                }
            }
        </table>
    </div>
</body>
</html>
